<section id="page-container">
  <h1>Create A Role</h1>
  <form id="new-form" action="/roles" method="POST">
    <div id="name-box">
      <h3>Name*:</h3> 
      <input id="name-input" name="name" type="text" autocomplete="off">
    </div>
    <div id="objects-container"> 
      <p id="descriptor">Description*: </p>
      <p id="description-text"><textarea name="description" id="" cols="82" rows="10"></textarea></p>
    </div>
    <p>Fields marked with * are required</p>
    <button id="save-btn" type="submit">Add Role</button>
  </form>
</section>

